{
  "name": "@aci-sdk/mcp",
  "version": "0.0.1",
  "type": "module",
  "description": "MCP servers for ACI.dev",
  "main": "dist/index.js",
  "bin": {
    "aci-mcp": "dist/index.js"
  },
  "keywords": [
    "mcp",
    "aci",
    "llm",
    "tools"
  ],
  "author": "ACI.dev",
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "dev": "npx tsx src/index.ts",
    "inspect": "npm run build && DEBUG=true npx -y @modelcontextprotocol/inspector npx tsx ./src/index.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "check-all": "npm run typecheck && npm run lint && npm run format:check"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "axios": "^1.7.7",
    "zod": "^3.25.67",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.0.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
